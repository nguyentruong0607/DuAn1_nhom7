<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layoutHuy"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floatAddToCard"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgChoXacNhan"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/iphone15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text=" Tên sản phẩm: "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTenSPChoXacNhan"
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text=" Tên sản phẩm:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="Giá: "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGiaSPChoXacNhan"
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="2.900.000đ"
                        android:textColor="#F80202"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        style="@style/edt_Label"
                        android:text="Ngày đặt hàng:  "
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        style="@style/edt_Label"
                        android:id="@+id/txtDateChoXacNhan"
                        android:text="2.900.000đ"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màu: "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtMauSPChoXacNhan"
                        style="@style/edt_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:text="Số lượng:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/soLuongSPChoXacNhan"
                        style="@style/edt_Label"
                        android:layout_width="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="88"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        style="@style/edt_Label"
                        android:text="Phương thức thanh toán :"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/PTTTSPChoXacNhan"
                        style="@style/edt_Label"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="5dp"
                        android:text="88"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginTop="5dp"
                    android:text="Mô tả:"
                    android:textColor="@color/black"
                    android:textSize="18dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMoTaSPChoXacNhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="iPhone 15 trở thành tâm điểm đáng chú ý tại sự kiện ra mắt thường niên của Apple vào tháng 09/2023 "
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/floatAddToCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnHuyDonHang"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:backgroundTint="#FF9800"
                android:text="Hủy đơn hàng"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>