<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floatAddToCard"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgDangGiaoHang"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/iphone15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="Tên sản phẩm: "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTenSPDangGiaoHang"
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text=" Tên sản phẩm:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="Giá: "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGiaSPDangGiaoHang"
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="2.900.000đ"
                        android:textColor="#F80202"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="Ngày đặt hàng:  "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDateDangGiaoHang"
                        style="@style/edt_Label"
                        android:layout_marginTop="5dp"
                        android:text="2.900.000đ"
                        android:textSize="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màu: "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtMauSPDangGiaoHang"
                        style="@style/edt_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edt_Label"
                        android:text="Số lượng: "
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/soLuongSPDangGiaoHang"
                        style="@style/edt_Label"
                        android:layout_width="wrap_content"
                        android:text="88"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginTop="10dp"
                    android:text="Phương thức thanh toán :"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/PTTTSPDangGiaoHang"
                    style="@style/edt_Label"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="88"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_marginTop="10dp"
                    style="@style/edt_Label"
                    android:text="Nơi nhận hàng :"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người nhận: "
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/txtNameNhanHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="quan"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại: "
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/txtPhoneNhanHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="quan"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: "
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/txtLocationNhanHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="quan"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />
                </LinearLayout>



                <TextView
                    style="@style/edt_Label"
                    android:layout_marginTop="10dp"
                    android:text="Mô tả:"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMoTaSPDangGiaoHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="iPhone 15 trở thành tâm điểm đáng chú ý tại sự kiện ra mắt thường niên của Apple vào tháng 09/2023 "
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/floatAddToCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNhanDonHangThanhCong"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#FF9800"
                android:text="Nhận hàng thành công"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>